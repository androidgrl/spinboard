<h1>Welcome to Spinboard!</h1>

<% if current_user %>
  Welcome, <%= current_user.name %>
<%= link_to "Logout", logout_path, method: :delete %>
<% else %>
  <h1>Signup!</h1>
  <%= form_for :user, url: '/signup' do |f| %>
    <%= f.label :name %>
    <%= f.text_field :name %></br>
    <%= f.label :email %>
    <%= f.text_field :email %></br>
    <%= f.label :password %>
    <%= f.password_field :password %></br>
    <%= f.label :password_confirmation %>
    <%= f.password_field :password_confirmation %></br>
    <%= f.submit "Signup" %>
  <% end %>
  <h1>Or Login</h1>
  <%= form_tag '/login' do %>
    Login Email: <%= text_field_tag :email, nil, id: "login-email" %></br>
    Login Password: <%= password_field_tag :password, nil, id: "login-password" %></br>
    <%= submit_tag "Login" %>
  <% end %>
<% end %>

<% flash.each do |name, msg| %>
  <%= content_tag :div, msg, :id => "flash_#{name}" %>
<% end %>
