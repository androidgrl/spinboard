<h1>Welcome to Spinboard!</h1>

<% if current_user %>
  Welcome, <%= current_user.name %>
<%= link_to "Logout", logout_path, method: :delete %></br>
<h3>Enter a new Link:</h3>
<label for="Title">Title:</label>
<input type="text" id="title"></br>
<label for="Link">Link:</label>
<input type="text" id="url"></br>
<input type="submit" value="Save" id="save">
<div id="error">
</div>
<div class="row">
  <div class="col-md-4" id="link-box">
    <h3>Search Options:</h3>
    <label for="search">Search:</label>
    <input type="text" id="search"></br>
    <label for="filter">Filter:</label>
    <button id="filter-read">Read</button><button id="filter-unread">Unread</button></br>
    <label for="sort">Sort Alphabetically:</label>
    <button id="sort">Sort</button>
    <h3>Links:</h3>
    <ul id="links">
    </ul>
  </div>
</div>

<% else %>
  <h1>Signup!</h1>
  <%= form_for :user, url: '/signup' do |f| %>
    <%= f.label :name %>
    <%= f.text_field :name %></br>
    <%= f.label :email %>
    <%= f.text_field :email %></br>
    <%= f.label :password %>
    <%= f.password_field :password %></br>
    <%= f.label :password_confirmation %>
    <%= f.password_field :password_confirmation %></br>
    <%= f.submit "Signup" %>
  <% end %>
  <h1>Or Login</h1>
  <%= form_tag '/login' do %>
    Login Email: <%= text_field_tag :email, nil, id: "login-email" %></br>
    Login Password: <%= password_field_tag :password, nil, id: "login-password" %></br>
    <%= submit_tag "Login" %>
  <% end %>
<% end %>
